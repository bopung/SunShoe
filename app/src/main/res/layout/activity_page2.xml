            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="7dp"
                android:layout_weight="1"
                app:backgroundTint="#B51BCF"
                android:text="Next >" />

        </LinearLayout>
