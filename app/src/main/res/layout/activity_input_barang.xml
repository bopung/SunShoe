<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/peakpx__1_"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inputsepatu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"
            android:text="Input Sepatu"
            android:textAlignment="center"
            android:textColor="#F8F2F2"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/radius_formwhiteblur"
            android:elevation="5dp"
            android:hint="Nama Sepatu"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/harga"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/radius_formwhiteblur"
            android:elevation="5dp"
            android:hint="harga Sepatu"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/ukuran"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/radius_formwhiteblur"
            android:elevation="5dp"
            android:hint="Ukuran Sepatu"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/radius_formwhiteblur"
            android:elevation="5dp"
            android:hint="link gambar sepatu"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/merk"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/radius_formwhiteblur"
            android:elevation="5dp"
            android:hint="merk sepatu"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/kategori"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/radius_formwhiteblur"
            android:elevation="5dp"
            android:hint="category sepatu"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/radius_formwhiteblur"
            android:elevation="5dp"
            android:hint="Deskripsi Sepatu"
            android:inputType="textMultiLine"
            android:paddingLeft="15dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/buttonConfirmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/design_default_color_secondary"
            android:text="Confirm" />
    </LinearLayout>


</RelativeLayout>