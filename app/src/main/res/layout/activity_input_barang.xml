<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/peakpx__1_"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/inputsepatu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:text="Input Sepatu"
        android:textAlignment="center"
        android:textColor="#F8F2F2"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/radius_formwhiteblur"
        android:elevation="5dp"
        android:hint="Nama Sepatu"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/merk"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/name"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/radius_formwhiteblur"
        android:elevation="5dp"
        android:hint="Merk Sepatu"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/jumlah"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/merk"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/radius_formwhiteblur"
        android:elevation="5dp"
        android:hint="Jumlah Sepatu"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/size"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/jumlah"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/radius_formwhiteblur"
        android:elevation="5dp"
        android:hint="Size Sepatu"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/size"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Upload Foto" />


    <Button
        android:id="@+id/buttonConfirmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/size"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Confirm" />


</RelativeLayout>